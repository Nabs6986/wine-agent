# Wine Agent Environment Configuration
# Copy this file to .env and fill in the values

# Database
# Default: ~/.wine_agent/wine_agent.db
# DATABASE_URL=sqlite:///./wine_agent.db

# AI Provider Configuration (future phases)
# ANTHROPIC_API_KEY=your-anthropic-api-key
# OPENAI_API_KEY=your-openai-api-key
# AI_PROVIDER=anthropic  # anthropic or openai
# AI_MODEL=claude-3-sonnet-20240229

# Web Server
# HOST=127.0.0.1
# PORT=8000
# DEBUG=false

# Ingestion Pipeline (Phase 2)
# Redis connection for background jobs
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# Snapshot storage for crawled content
SNAPSHOT_STORAGE_PATH=~/.wine_agent/snapshots

# Source configuration file
SOURCES_CONFIG_PATH=config/sources.yaml

# Meilisearch (for catalog search)
MEILISEARCH_URL=http://localhost:7700
MEILISEARCH_API_KEY=
